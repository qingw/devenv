root = true

[*]
charset = utf-8
indent_style = space
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4

# 4 space indentation
[*.py]
indent_size = 4

[*.{js,json}]
indent_size = 4

[*.{yaml}]
indent_size = 2

[*.el]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
